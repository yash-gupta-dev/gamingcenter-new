<%- include('./head.ejs') -%>

    <aside id="sidebar"
        class="fixed inset-y-0 left-0 z-50 w-64 bg-slate-900 border-r border-slate-800 transform -translate-x-full md:relative md:translate-x-0 transition-transform duration-300 ease-in-out">
        <div class="flex flex-col h-full p-4">
            <!-- Logo -->
            <div class="flex items-center space-x-2 px-4 py-6 mb-4">
                <div
                    class="w-8 h-8 rounded-lg bg-gradient-to-tr from-violet-600 to-indigo-500 flex items-center justify-center shadow-lg shadow-violet-500/20">
                    <i data-lucide="gamepad-2" class="w-5 h-5 text-white"></i>
                </div>
                <span class="text-xl font-bold text-white tracking-tight">GAME<span
                        class="text-violet-500">CENTER</span></span>
                <!-- Close button for mobile -->
                <button onclick="toggleSidebar()" class="md:hidden ml-auto text-slate-400">
                    <i data-lucide="x" class="w-5 h-5"></i>
                </button>
            </div>

            <!-- Nav Links -->
            <div class="space-y-2 flex-1">
                <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider px-4 mb-2 mt-2">Main Menu
                </div>

                <button onclick="switchTab('dashboard')"
                    class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 bg-violet-600 text-white shadow-lg shadow-violet-900/20"
                    data-target="dashboard">
                    <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
                    <span class="font-medium">Dashboard</span>
                </button>

                <button onclick="switchTab('users')"
                    class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 text-slate-400 hover:bg-slate-800 hover:text-white"
                    data-target="users">
                    <i data-lucide="users" class="w-5 h-5"></i>
                    <span class="font-medium">Players</span>
                </button>

                <button onclick="switchTab('games')"
                    class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 text-slate-400 hover:bg-slate-800 hover:text-white"
                    data-target="games">
                    <i data-lucide="gamepad-2" class="w-5 h-5"></i>
                    <span class="font-medium">Game Library</span>
                </button>

                <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider px-4 mb-2 mt-8">System</div>
                <button onclick="switchTab('settings')"
                    class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 text-slate-400 hover:bg-slate-800 hover:text-white"
                    data-target="settings">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                    <span class="font-medium">Settings</span>
                </button>
            </div>

            <!-- User Profile Footer -->
            <div class="mt-auto pt-6 border-t border-slate-800">
                <div class="flex items-center space-x-3 px-4 py-2 rounded-xl bg-slate-800/50">
                    <div
                        class="w-8 h-8 rounded-full bg-gradient-to-r from-emerald-400 to-cyan-500 flex items-center justify-center text-slate-900 font-bold text-xs">
                        AD</div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-white truncate">AdminUser</p>
                        <p class="text-xs text-slate-500 truncate">Super Admin</p>
                    </div>
                    <i data-lucide="log-out" class="w-4 h-4 text-slate-500 hover:text-white cursor-pointer"></i>
                </div>
            </div>
        </div>
    </aside>